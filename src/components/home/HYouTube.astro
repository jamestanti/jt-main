const youtubeVideos = [
  "UscRVc0HKvU",
  "DBBULGDh42I",
  "tv_uGEifpGQ",
  "Re8CygVVFZs",
  "6O1oU5SmKIc",
  "VpiYi1wAigk",
  "vmqVfsNwe30",
  "b6V_03wW0So",
  "ZCF7bjjVwvA",
  "Wa_swmTproI",
  "FcGk0XfhD5g",
];
---

<!-- ! SECTION HYouTube -->
<section class="dark bg-black">
  <!-- Card Blog -->
  <div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
    <!-- Title -->
    <div class="max-w-2xl mx-auto text-center mb-10 lg:mb-14">
      <h2
        class="text-2xl font-bold md:text-4xl md:leading-tight dark:text-white"
      >
        Watch James Tanti's Content
      </h2>
      <p class="mt-1 text-gray-600 dark:text-neutral-400">
        Stay in the know with insights from the creator of greatness himself.
      </p>
    </div>
    <!-- End Title -->

    <!-- Grid -->
    <div class="grid sm:grid-cols-2 lg:grid-cols-2 gap-6">
      {
        youtubeVideos.map((item, i) => (
          <div class="group rounded-md overflow-hidden hidden md:block">
            <iframe
              width="640"
              height="360"
              src={`https://www.youtube.com/embed/${item}`}
              title="James Tanti's Video"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture;"
              referrerpolicy="strict-origin-when-cross-origin"
              sandbox="allow-forms allow-scripts allow-pointer-lock allow-same-origin allow-top-navigation"
              allowfullscreen
            />
          </div>
          <div class="group rounded-md overflow-hidden block md:hidden">
            <iframe
              width="100%"
              height="240"
              src={`https://www.youtube.com/embed/${item}`}
              title="James Tanti's Video"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture;"
              referrerpolicy="strict-origin-when-cross-origin"
              sandbox="allow-forms allow-scripts allow-pointer-lock allow-same-origin allow-top-navigation"
              allowfullscreen
            />
          </div>
        ))
      }

      <!-- Card -->
      <a
        class="group relative flex flex-col w-full min-h-60 bg-[url('https://images.unsplash.com/photo-1634017839464-5c339ebe3cb4?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=3000&q=80')] bg-center bg-cover rounded-xl hover:shadow-lg transition"
        href="https://www.youtube.com/@thejamestanti"
        target="_blank"
      >
        <div class="flex-auto p-4 md:p-6">
          <h3 class="text-xl text-white/90 group-hover:text-white">
            <span class="font-bold">James Tanti</span> publishes videos on a weekly
            basis that will help you excel in sales and leadership.
          </h3>
        </div>
        <div class="pt-0 p-4 md:p-6">
          <div
            class="inline-flex items-center gap-2 text-sm font-medium text-white group-hover:text-white/70"
          >
            Visit James Tanti's YouTube Channel
            <svg
              class="flex-shrink-0 size-4"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"><path d="m9 18 6-6-6-6"></path></svg
            >
          </div>
        </div>
      </a>
      <!-- End Card -->
    </div>
    <!-- End Grid -->
  </div>
  <!-- End Card Blog -->
</section>
<!-- ! END SECTION HYouTube -->
