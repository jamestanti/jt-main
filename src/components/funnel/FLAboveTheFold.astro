---
const ctaCopy = "Do You Want To Be A Great Sales Leader? Click here"
const ctaLink = "#cartfunnel"

const copy = {
  subtext: "75 Minutes FREE Sales Leadership Masterclass December 5, 2024 @ 1 PM PST",
  attention: "ATTENTION SALES LEADERS!",
  headline: "Become a Better Sales leader and Future Proof Your Business!",
  subheadline: "Join Our FREE Sales Leadership Masterclass and Discover Proven Strategies to Lead Your Sales Team to New Heights.",
  highlight: "Make the Pivot & Embrace Change Now!",
}

const {subtext=copy.subtext, attention=copy.attention, headline=copy.headline, subheadline=copy.subheadline, highlight=copy.highlight} = Astro.props;

---

<!-- ! START FLAboveTheFold -->
<section class="dark bg-black">
    <div class="relative overflow-hidden before:absolute before:top-0 before:start-1/2 before:bg-[url('https://preline.co/assets/svg/examples/polygon-bg-element.svg')] dark:before:bg-[url('https://preline.co/assets/svg/examples-dark/polygon-bg-element.svg')] before:bg-no-repeat before:bg-top before:bg-cover before:size-full before:-z-[1] before:transform before:-translate-x-1/2">
        <div class="max-w-[85rem] mx-auto px-4 sm:px-6 lg:px-8 pt-10 pb-10">

            <div class="flex gap-2 text-gray-200 mx-auto justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-calendar-days"><path d="M8 2v4"/><path d="M16 2v4"/><rect width="18" height="18" x="3" y="4" rx="2"/><path d="M3 10h18"/><path d="M8 14h.01"/><path d="M12 14h.01"/><path d="M16 14h.01"/><path d="M8 18h.01"/><path d="M12 18h.01"/><path d="M16 18h.01"/></svg>
                <p class="text-center">{subtext}</p>
            </div>

            <div class="mx-auto text-center my-6">
                <span class="py-2 bg-red-600 rounded-full px-4 text-white">{attention}</span>
            </div>

            <div class="max-w-4xl text-center mx-auto">
                <h1 class="block font-bold text-gray-800 text-3xl md:text-5xl lg:text-6xl dark:text-neutral-200">
                  <span class="dark:bg-clip-text dark:bg-gradient-to-tl dark:from-[#fff720] dark:to-[#fff948] dark:text-transparent ">
                  {headline}
                  </span>
                  <br>
                </h1>
                <h2 class="text-white font-medium text-lg md:text-2xl mt-1">{subheadline}<br> <span class="italic inline-block mt-4 bg-clip-text bg-gradient-to-tl from-[#fff720] to-[#fff948] text-transparent">{highlight}</span></h2>
            </div>

            <div class="mt-5 max-w-4xl mx-auto overflow-hidden rounded-md">
                <div class="bg-blue-600 text-center max-w-[80%] mx-auto">
                    <p class="py-1 text-base md:text-lg rounded-s-md font-semibold text-white">BECOME PART OF GREATNESS</p>
                </div>
                <img src="https://storage.googleapis.com/msgsndr/eVZCTmUpFBz5E8QcsJDI/media/6740e21a1cefe293727e6ee2.png" alt="">
                
              </div>
               <!-- Buttons -->
      <div class="mt-8 gap-3 flex justify-center items-center">
        <svg class="size-24 text-white" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-move-right"><path d="M18 8L22 12L18 16"/><path d="M2 12H22"/></svg>
        <a class="inline-flex justify-center items-center gap-x-3 text-center bg-gradient-to-tl from-[#AE8625] via-[#d2b25c] to-[#d2ac47] hover:from-[#d2ac47] hover:via-[#edc967] hover:to-[#AE8625]  scale-95 hover:scale-100 duration-100 border border-transparent text-white text-lg md:text-2xl font-medium rounded-md focus:outline-none focus:from-violet-600 focus:to-blue-600 py-3 px-4" href={ctaLink}>
          {ctaCopy}
          <svg class="shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
        </a>
        <svg class="size-24 text-white" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-move-left"><path d="M6 8L2 12L6 16"/><path d="M2 12H22"/></svg>
      </div>
      <!-- End Buttons -->
        </div>
        
    </div>
</section>
<!-- ! END FLAboveTheFold -->